<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_item_width"
    android:layout_height="@dimen/grid_item_height"
    android:background="@color/colorShadow"
    android:elevation="10dp">
    <LinearLayout
        android:layout_width="@dimen/grid_item_width" android:layout_height="@dimen/grid_item_height"
        android:background="@drawable/grid_item_background"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/grid_image"
            android:layout_width="@dimen/grid_image_width"
            android:layout_height="@dimen/grid_image_height"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/no_image"/>

        <View android:background="@color/colorGrey"
            android:layout_marginRight="@dimen/default_half_margin"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width = "match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_half_margin">

            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="@dimen/like_icon_width"
                android:layout_height="@dimen/like_icon_height"
                android:layout_gravity="bottom"
                android:src="@drawable/like"
                android:layout_marginLeft="@dimen/default_margin"
                />

            <TextView
                android:id="@+id/likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_half_margin"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:text="12"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_half_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="@dimen/profile_icon_width"
                android:layout_height="@dimen/profile_icon_height"
                android:src="@drawable/no_image"/>

            <TextView
                android:gravity="center"
                android:id="@+id/profile_name"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:text="Souvik Mondal"/>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>
